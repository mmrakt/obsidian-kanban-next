{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noExplicitAny": "off",
        "noThisInStatic": "off",
        "useOptionalChain": "warn"
      },
      "correctness": {
        "noEmptyFunction": "off",
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "off"
      },
      "style": {
        "noVar": "error",
        "useConst": "warn",
        "useNodejsImportProtocol": "off",
        "noInferrableTypes": "off",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noEmptyInterface": "off",
        "noRedeclare": "error"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      }
    },
    "ignore": ["./src/docs/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "files": {
    "ignore": ["node_modules", "dist", "main.js", "styles.css", ".obsidian"]
  }
}
